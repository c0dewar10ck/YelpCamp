<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 33%; margin: 30px auto;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" name="comment[text]" type="text" value="<%=comment.text%>">
                </div>
                <div>
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
                <a class="form-group" href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>